<Window x:Class="Meubelen.Presentation.Views.Clients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Meubelen.Presentation.Views"
        mc:Ignorable="d"
        Title="Clients" Height="450" Width="800">
    <Grid>
        <ListBox HorizontalAlignment="Left" Height="263"
                 IsSynchronizedWithCurrentItem="True"
                 ItemsSource="{Binding Path=Clients}"
                 SelectedItem="{Binding Path=SelectedClient}"
                 DisplayMemberPath="FirstName"
                 Margin="205,69,0,0" VerticalAlignment="Top" Width="218"/>

    </Grid>
</Window>
